 <div class="container d-flex flex-column align-items-center">
{{#if shortURL}}
        <div>
            <p class="font-weight-bold disabled" style="font-weight: 700; font-size: x-large">Success! Please use this link</p>
        </div>

        <div class="mb-3">
            <form action="/shortUrls" method="POST" class="d-flex flex-column align-items-center">
                <label for="shortUrl"></label>
                <input required type="url" id="shortUrl" class="form-control mb-3 col" placeholder="{{this.shortUrl}}" name="shortUrl">
                <button type="submit" class="btn btn-outline-primary btn-lg">Shorten</button>
            </form>
        </div>
{{else}}
        <div class="mb-3">
            <form action="/shortUrls" method="POST" class="d-flex flex-column align-items-center">
                <label for="fullUrl"></label>
                <input required type="url" id="fullUrl" class="form-control mb-3 col" placeholder="Input URL here" name="fullUrl">
                <button type="submit" class="btn btn-outline-primary btn-lg">Shorten</button>
            </form>
        </div>
    </div>
{{/if}}